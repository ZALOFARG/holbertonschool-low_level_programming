CC=gcc
SRCMAIN=main.c
SRCSCHOOL=school.c
OBJMAIN=main.o
OBJSCHOOL=school.o
NAME=school

all: compilarFuente compilarObjetos clean

compilarFuente: $(SRCMAIN) $(SRCSCHOOL)
	$(CC) -c $(SRCMAIN) -o $(OBJMAIN)
	$(CC) -c $(SRCSCHOOL) -o $(OBJSCHOOL)

compilarObjetos: $(OBJMAIN) $(OBJSCHOOL)
	$(CC) $(OBJMAIN) $(OBJSCHOOL) -o $(NAME)

clean:
	rm -rf *.o
